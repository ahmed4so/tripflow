@model IEnumerable<UsersApp.Models.Flight>

@{
    ViewData["Title"] = "Flights";
}

<h2>Flight List</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Flight</a>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Flight Number</th>
            <th>Airline</th>
            <th>Departure Airport</th>
            <th>Arrival Airport</th>
            <th>Departure Time</th>
            <th>Arrival Time</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            foreach (var flight in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@flight.FlightNumber</td>
                    <td>@flight.Airline</td>
                    <td>@flight.DepartureAirport</td>
                    <td>@flight.ArrivalAirport</td>
                    <td>@flight.DepartureTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@flight.ArrivalTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@flight.Price.ToString("C")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@flight.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@flight.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="9" class="text-center">No flights found.</td>
            </tr>
        }
    </tbody>
</table>
