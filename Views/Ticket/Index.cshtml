@model IEnumerable<UsersApp.Models.Ticket>

@{
    ViewData["Title"] = "Tickets";
}

<h2>Ticket List</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Ticket</a>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Passenger Name</th>
            <th>Flight Number</th>
            <th>Booking Date</th>
            <th>Total Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            foreach (var ticket in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@ticket.Passenger.FullName</td>
                    <td>@ticket.Flight.FlightNumber</td>
                    <td>@ticket.BookingDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@ticket.TotalPrice.ToString("C")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@ticket.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@ticket.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No tickets found.</td>
            </tr>
        }
    </tbody>
</table>
