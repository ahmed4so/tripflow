@model UsersApp.Models.Ticket

@{
    ViewData["Title"] = "Create Ticket";
}

<h2>Create Ticket</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="FlightId" class="control-label"></label>
        <select asp-for="FlightId" class="form-control" asp-items="ViewBag.Flights"></select>
        <span asp-validation-for="FlightId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PassengerId" class="control-label"></label>
        <select asp-for="PassengerId" class="form-control" asp-items="ViewBag.Passengers"></select>
        <span asp-validation-for="PassengerId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BookingDate" class="control-label"></label>
        <input asp-for="BookingDate" type="datetime-local" class="form-control"  />
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
