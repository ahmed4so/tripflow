@model UsersApp.Models.Ticket

@{
    ViewData["Title"] = "Delete Ticket";
}

<h2>Delete Ticket</h2>

<div class="alert alert-danger" role="alert">
    <strong>Are you sure you want to delete this ticket?</strong>
</div>

<div>
    <h4>Ticket Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Passenger Name</dt>
        <dd class="col-sm-10">@Model.Passenger.FullName</dd>

        <dt class="col-sm-2">Flight Number</dt>
        <dd class="col-sm-10">@Model.Flight.FlightNumber</dd>

        <dt class="col-sm-2">Booking Date</dt>
        <dd class="col-sm-10">@Model.BookingDate.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">Total Price</dt>
        <dd class="col-sm-10">@Model.TotalPrice.ToString("C")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
