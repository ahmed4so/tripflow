@model UsersApp.Models.Ticket

@{
    ViewData["Title"] = "Edit Ticket";
}

<h2>Edit Ticket</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="FlightId" class="control-label"></label>
        <select asp-for="FlightId" class="form-control" asp-items="ViewBag.Flights"></select>
        <span asp-validation-for="FlightId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PassengerId" class="control-label"></label>
        <select asp-for="PassengerId" class="form-control" asp-items="ViewBag.Passengers"></select>
        <span asp-validation-for="PassengerId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BookingDate" class="control-label"></label>
        <input asp-for="BookingDate" type="datetime-local" class="form-control" readonly />
        <span asp-validation-for="BookingDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TotalPrice" class="control-label"></label>
        <input asp-for="TotalPrice" type="number" step="0.01" class="form-control"  />
        <span asp-validation-for="TotalPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
